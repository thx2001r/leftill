{
	"name": "leftill",
	"description": "A simple way to track how much money is left until your next paycheck",
	"version": "0.1.1",
	"type": "module",
	"scripts": {
		"watch": "node --experimental-vm-modules --no-warnings node_modules/jest/bin/jest.js --watch",
		"test": "eslint src/js/* && node --experimental-vm-modules --no-warnings node_modules/jest/bin/jest.js",
		"clean": "rm -rf dist",
		"minify": "mkdir -p dist/js && uglifyjs src/js/*.*js --config-file minify-options.json > dist/js/leftill.min.js",
		"build": "npm run test && npm run clean && npm run minify"
	},
	"jest": {
		"testEnvironment": "node",
		"roots": [
			"<rootDir>/src",
			"<rootDir>/__tests__"
		],
		"moduleFileExtensions": [
			"js",
			"mjs"
		]
	},
	"devDependencies": {
		"@types/jest": "^27.0.3",
		"eslint": "^7.32.0",
		"eslint-config-standard": "^16.0.3",
		"eslint-plugin-import": "^2.24.2",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-promise": "^5.1.0",
		"jest": "^27.2.4",
		"uglify-js": "^3.14.2"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/thx2001r/leftill.git"
	},
	"bugs": {
		"url": "https://github.com/thx2001r/leftill/issues"
	},
	"author": {
		"name": "Joseph Reiter"
	},
	"license": "MIT"
}
